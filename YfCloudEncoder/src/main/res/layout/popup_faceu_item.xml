<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_function"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_20"
                android:orientation="vertical"
                android:visibility="visible">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_faceu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_function"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_12"
        android:scrollbarThumbVertical="@drawable/vertical_bar"
        android:scrollbars="vertical">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_32"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@color/colorLightBlue">

    </View>

    <TextView
        android:id="@+id/tv_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:drawableLeft="@drawable/bt_ar"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center"
        android:text="@string/menu_face_u"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16"/>
</RelativeLayout>